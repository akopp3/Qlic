<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/relativeLayout">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_send_24dp"
        android:layout_marginRight="10dp"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="\@aneesh_jindal"
        android:textColor="#000"
        android:textSize="20dp"
        android:id="@+id/handleTextView"
        android:layout_toRightOf="@id/imageView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Twitter"
        android:textColor="#000"
        android:textSize="15dp"
        android:id="@+id/typeTextView"
        android:layout_below="@+id/handleTextView"
        android:layout_alignLeft="@+id/handleTextView"
        android:layout_alignStart="@+id/handleTextView"
        android:layout_marginBottom="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="35dp"
        android:id="@+id/lineView"
        android:layout_below="@id/typeTextView"/>

</RelativeLayout>