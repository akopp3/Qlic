<?xml version="1.0" encoding="utf-8"?>
<com.redbooth.WelcomePageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/welcome_page_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:background="@color/setup2"
    tools:context=".activities.LoaderActivity">

    <!--<include layout="@layout/activity_setup_activity"
        android:id="@+id/twit"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />-->

    <TextView

        android:id="@+id/title"
        style="@style/text_title_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subtitle"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:text="Almost Done!" />

    <TextView
        android:id="@+id/subtitle_top"
        style="@style/text_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:gravity="center_horizontal"
        android:text="Enter any information you \nwant to share with others" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle_top"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat">

            <EditText
                android:id="@+id/name_txt"
                style="@style/editTextElegant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textImeMultiLine" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat">

            <EditText
                android:id="@+id/phone_input"
                style="@style/editTextElegant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone Number"
                android:imeOptions="actionNext"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat">

            <EditText
                android:id="@+id/cont_input"
                style="@style/editTextElegant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>
        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:theme="@style/Theme.AppCompat">-->
        <!--<EditText-->
        <!--android:id="@+id/fb_input"-->
        <!--style="@style/editTextElegant"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:hint="Facebook Name" />-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat">

            <EditText
                android:id="@+id/inst_input"
                style="@style/editTextElegant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Instagram Username"
                android:inputType="textImeMultiLine" />
        </android.support.design.widget.TextInputLayout>
        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:theme="@style/Theme.AppCompat">-->
        <!--<EditText-->
        <!--android:id="@+id/twit_input"-->
        <!--style="@style/editTextElegant"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:hint="Twitter Username" />-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.AppCompat">

            <EditText
                android:id="@+id/link_input"
                style="@style/editTextElegant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="LinkedIn Name"
                android:imeOptions="actionNone"
                android:inputType="textImeMultiLine" />
        </android.support.design.widget.TextInputLayout>

        <TableLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/fb_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />


        </TableLayout>


    </LinearLayout>
</com.redbooth.WelcomePageLayout>
